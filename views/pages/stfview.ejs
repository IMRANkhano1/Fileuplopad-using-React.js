<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
        <div class="container mt-4">
           
            <table class="table" style="background-color:lightgreen;">
                <thead>
                    <h1>LECTURE DETAILS</h1>
                    <div> <a href="reg"><button>Home</button></a></div><br>
                    <tr>
                        <th>Staff id</th>
                        <th>Staff name</th>
                        <th>Department</th>
                        <th>Email id</th>
                        <th>Phone no</th>
                        <th>Position</th>
                        <th>Subject</th>
                        <th>Year of Join</th>
                        <th>update</th>
                        <th>delete</th>
                    </tr>
                </thead>
                <tbody>
                    <%if(data.length)
                    {
                        for(var i=0; i<data.length; i++)
                        {
                    %>
                    <tr>
                        <th scope="row"><%=data[i].staffid%></th>
                        <td><%=data[i].staffname%></td>
                        <td><%=data[i].department%></td>
                        <td><%=data[i].emailid%></td>
                        <td><%=data[i].phnno%></td>
                        <td><%=data[i].position%></td>
                        <td><%=data[i].subject%></td>
                        <td><%=data[i].yrofjoin%></td>
                        <td><a href="update1"><button>Update</button></a></td>
                        <td><a href="delete1"><button>delete</button></a></td> 
                    </tr>
                        <%}
                    }
                    else
                    {%>
                        <tr>
                            <td>no data ever existed.</td>
                        </tr>
                    <%}%>
                </tbody>
            </table>
           
        </div>
    </body>
    </html>